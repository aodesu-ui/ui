// src/theme.types.ts
export type ColorTokens = {
  background?: string;
  color?: string;
  border?: string;
  borderRadius?: string;
  padding?: string;
  margin?: string;
  fontSize?: string;
  fontWeight?: string;
  boxShadow?: string;
  opacity?: string;
};

export type ComponentVariant = {
  [color: string]: ColorTokens;
};

export type ComponentTheme = {
  [variant: string]: ComponentVariant;
};

export type Theme = {
  [component: string]: ComponentTheme;
};

// Tipos espec√≠ficos para componentes comunes
export type ButtonVariants = 'contained' | 'outlined' | 'text';
export type ButtonColors = 'primary' | 'secondary' | 'success' | 'error' | 'warning' | 'info';

